apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

resources:
- ../../../../base/nutanix/cluster-topology

patches:
- target:
    group: cluster.x-k8s.io
    kind: Cluster
  patch: |-
    - op: "add"
      path: "/spec/topology/variables/0/value/addons"
      value:
        cni:
          provider: Calico
          strategy: ClusterResourceSet
